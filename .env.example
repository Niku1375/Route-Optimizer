# Logistics Routing System - Environment Variables Template
# Copy this file to .env.development, .env.staging, .env.production
# Replace placeholder values with your actual API keys and credentials

# Application Configuration
NODE_ENV=development
PORT=3000
WEBSOCKET_PORT=3001

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=logistics_routing_db
DATABASE_USER=logistics_user
DATABASE_PASSWORD=dev_password
DATABASE_SSL=true
DATABASE_POOL_MIN=5
DATABASE_POOL_MAX=20
DATABASE_IDLE_TIMEOUT=30000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DATABASE=0
REDIS_KEY_PREFIX=logistics:
REDIS_CONNECTION_TIMEOUT=10000

# External API Keys
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
MAPBOX_ACCESS_TOKEN=your_mapbox_access_token_here
GRAPHHOPPER_API_KEY=your_graphhopper_api_key_here
MAPMYINDIA_API_KEY=your_mapmyindia_api_key_here
OPENWEATHERMAP_API_KEY=your_openweathermap_api_key_here
AMBEE_API_KEY=your_ambee_api_key_here

# Delhi Traffic Police API (if available)
DELHI_TRAFFIC_API_KEY=your_delhi_traffic_api_key_here

# IMD Weather API (if available)
IMD_API_KEY=your_imd_api_key_here

# Security
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=7d
JWT_ISSUER=logistics-routing-system
JWT_AUDIENCE=logistics-api

# Monitoring & Alerts
SLACK_WEBHOOK_URL=your_slack_webhook_url_here
ALERT_EMAIL=your_alert_email_here
PROMETHEUS_ENDPOINT=http://localhost:9090
GRAFANA_DASHBOARD=http://localhost:3000
LOG_LEVEL=info
LOG_RETENTION_DAYS=30

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=1000

# SSL Configuration (for production)
SSL_CERT_PATH=/path/to/ssl/cert.crt
SSL_KEY_PATH=/path/to/ssl/private.key

# Performance Configuration
MAX_MEMORY=2GB
CLUSTER_WORKERS=4
HEALTH_CHECK_PATH=/health
METRICS_PATH=/metrics

# Cache TTL Settings (in seconds)
CACHE_TTL_VEHICLE_SEARCH=300
CACHE_TTL_TRAFFIC_DATA=600
CACHE_TTL_ROUTE_OPTIMIZATION=1800
CACHE_TTL_COMPLIANCE_RULES=3600
CACHE_TTL_WEATHER_DATA=1800
CACHE_TTL_AIR_QUALITY=3600

# API Timeouts (in milliseconds)
GOOGLE_MAPS_TIMEOUT=10000
MAPBOX_TIMEOUT=8000
GRAPHHOPPER_TIMEOUT=12000
MAPMYINDIA_TIMEOUT=10000
OPENWEATHERMAP_TIMEOUT=8000
AMBEE_TIMEOUT=8000

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# IP Whitelisting (comma-separated)
IP_WHITELIST=127.0.0.1,::1

# Encryption
ENCRYPTION_ALGORITHM=AES-256-GCM
DATA_AT_REST_ENCRYPTED=true
DATA_IN_TRANSIT_TLS=1.3
PII_MASKING_ENABLED=true